{
    "files.exclude": {
        ".venv": true,
        ".pytest_cache": true,
        "app_name/core/swagger/swagger-ui-bundle.js": true,
        "app_name/core/swagger/swagger-ui.css": true,
    },
    "python.analysis.packageIndexDepths": [
        {
            "name": "sqlalchemy",
            "depth": 3,
            "includeAllSymbols": true
        },
        {
            "name": "fastapi",
            "depth": 3,
            "includeAllSymbols": true
        },
        {
            "name": "pydantic",
            "depth": 3,
            "includeAllSymbols": true
        },
        {
            "name": "app_name",
            "depth": 6,
            "includeAllSymbols": true
        },
    ],
    "python.testing.pytestArgs": [
        "tests"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true
}
